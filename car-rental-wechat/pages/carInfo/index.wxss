.swiper{
    height: 36vh;
    width: 100%;
}
.swiper-item{
    width: 100% !important;
    height: 36vh !important;
}
.swiper-item-image{
    width: 100%;
    height: 36vh;
}
.car-infos{
    box-shadow: 0 20rpx 0rpx 0 rgba(212, 217, 223, .5);
    padding-bottom: 20rpx;
}
.car-price{
    display:flex;
    justify-content: space-between;
    margin: 20rpx 20rpx;
}
.car-price-text1{
    font-size: 48rpx;
}
.car-price-text2{
    font-size: 24rpx;
    color: #515151;
}
.icon-arrow{
    margin-top: 20rpx;
}
.car-name{
    margin-left:20rpx; 
    font-weight: 900; 
    font-size: 32rpx;
}
.car-info{
    margin-left:20rpx;
    margin-top: 20rpx; 
    color: #515151;
}
.rights-interests{
    display: flex; 
    justify-content: space-around; 
    font-size: 28rpx; 
    font-weight: 400; 
    margin-top: 20rpx;
}
.rights-interests-bgcolor{
    background-color: #FBE7CD ;
    margin-right: 8rpx; 
    height: 30rpx;
    width: 30rpx;
    display: inline-block; 
    border-radius: 50%;
}
.Discount{
    box-shadow: 0 20rpx 0rpx 0 rgba(212, 217, 223, .5);
    padding-bottom: 20rpx;
}

.align-items{
    display: flex;
    align-items: center;
}
.carDiscount{
    padding-top: 40rpx;
    padding-left: 20rpx;
    font-size: 35rpx;
    font-weight: 500;
}
.discountInfo{
    padding-top: 20rpx;
    display:flex;
    justify-content: space-around;
}
.discountInfo-bgcolor{
    background-color: #FFB100 ; 
    height: 10rpx;
    width: 10rpx;
    margin-right: 10rpx;
    display: inline-block; 
    border-radius: 50%;
}
.discountInfo-text2{
    font-size: 30rpx; 
    color: #E08408;
}
.discountInfo-text3{
    font-size: 30rpx;
}
.deposit{
    padding-top: 40rpx;
    padding-left: 20rpx;
    font-size: 35rpx;
    font-weight: 500;
}
.deposit-text1{
    padding-left: 20rpx;
    font-size: 26rpx;
    font-weight: 500;
    color: #663900  ;
}
.deposit-bgcolor{
    margin:0 auto;
    margin-top: 20rpx;
    padding-top: 20rpx;
    text-align: center;
    background-color: #FFB100;
    height: 65rpx;
    width: 450rpx;
    border-radius: 60rpx;
    font-size: 35rpx;
    font-weight: 500;
    color: #663900 ;
}
.tag_tyle{
    margin-left: 10rpx;
    border-radius: 18rpx 20rpx 20rpx 0 !important;
    width: 240rpx !important;
}