/* pages/order_details/index.wxss */
.view_box1 {
    height: 400rpx;
    background-color: #534555;
    display: flex;
}

.order_state {
    font-size: 30rpx;
    color: rgb(226, 226, 0);
    width: 60%;
    height: 60rpx;
    line-height: 60rpx;
    margin-left: 10%;
    margin-top: 9%;
}

.usecar_notice {
    background-color: #8f8f8f;
    height: 60rpx;
    width: 140rpx;
    font-size: 24rpx;
    line-height: 60rpx;
    text-align: center;
    border-radius: 30rpx;
    color: white;
    margin-top: 9%;
}

.view_box2 {
    background-color: #fff;
    box-shadow: 0 4rpx 20rpx 0 rgba(212, 217, 223, .9);
    width: 96%;
    height: 700rpx;
    border-radius: 24rpx;
    margin-top: -240rpx;
    margin-left: 2%;
}

.order_info {
    height: 50rpx;
    display: flex;
    border-bottom: 1rpx solid #53455533;
    justify-content: space-between;
}

.order_info_font {
    font-size: 24rpx;
    color: #8f8f8f;
}
.itinerary{
    font-size: 24rpx;margin-top: 20rpx; font-weight: 500; color: #2a2a2a;
}
.car_info{
    margin-top: 20rpx; display: flex;
}


.view_public_padding {
    padding: 20rpx;
}

.view_box3 {
    background-color: #fff;
    box-shadow: 0 4rpx 20rpx 0 rgba(212, 217, 223, .9);
    width: 96%;
    height: 500rpx;
    border-radius: 24rpx;
    margin-left: 2%;
    margin-top: 20rpx;
}

.view_box4 {
    width: 100%;
    height: 220rpx;
    position: fixed;
    bottom: 0;
}



.button-class {
    width: 20%;
    background-color: #534555 !important;
    border-color: #534555 !important;
}

.item {
    margin-top: 30rpx;
    width: 22px;
    color: #F56723;
    font-size: 12px;
    text-align: center;
    border-radius: 2px;
}